<Application x:Class="XBoxMouse.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converter="clr-namespace:XBoxMouse.Converter"
             StartupUri="View/ShellView.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="View/Styles/TransparentWindow.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converter:ImageToSourceConverter x:Key="ImageToSourceConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
